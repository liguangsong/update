%header( id="auction")
  报名({{number}}人)
  %div(class = "header-right")
    %button(ng-tap="start_auction()" ng-show='show' class="btn btn-primary" ng-disabled="is_able")
      开始

  %div(class = "header-left" ng-tap="jump_activity_list()")
    %a(class="side-slide-trigger btn btn-primary")
      返回
  %div(class = "header-right")
    %button(class="btn btn-primary" ng-tap="stop_auction()"ng-show='!show' ng-disabled="no_able")
      结束


%div(class="index-menu" id='synchronous')
  %div(id="wrapper" class="wrapper scrollable" )
    %div(class="wrapper-inner")
      %div(class="form-wrapper")
        %ul(class="list-style-2" style="-webkit-transition: -webkit-transform 0ms; transition: -webkit-transform 0ms; -webkit-transform-origin: 0px 0px; -webkit-transform: translate3d(0px, 0px, 0);" )
          %li( ng-repeat="list in newList2" ng-tap="jump_auction(list)" )
            %h3
              {{list.name}}
            %p
              {{list.phone}}





%footer
  %ul(class="footer-nav footer-nav-2tabs")
    %li(class="active" )
      %a
        %h3
          报名
    %li
      %a(ng-tap="go_to_auction_list()")
        %h3
          竞价




