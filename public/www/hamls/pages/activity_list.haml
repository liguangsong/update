
%header(id='synchronous')
  活动列表
  %div(class = "header-right" ng-tap="jump_creat_activity()")
    %a( class="btn btn-primary")
      创建活动
  %div(class = "header-left" ng-tap="synchronous_data()")
    %a(class="side-slide-trigger btn btn-primary")
      同步
%div(class="index-menu" )
  %div(id="wrapper" class="wrapper scrollable" )
    %div(class="wrapper-inner")
      %div(class="form-wrapper")
        %ul(class="list-style-2" style="-webkit-transition: -webkit-transform 0ms; transition: -webkit-transform 0ms; -webkit-transform-origin: 0px 0px; -webkit-transform: translate3d(0px, 0px, 0);" )
          %li( id="{{list.name}}" ng-repeat="list in eventList" ng-tap="jump_auction(list)" class="{{list.status}}" )
            %h3
              {{list.activity_name}}

%div(ng-switch="pop_out_modal")
  %div(ng-switch-when="true" class="modal hide fade in" style="display:block;" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false" )
    %div(class="modal-header")
      %div(ng-show="success")
        %h3 同步成功
      %div(ng-show="false")
        %h3 同步失败,请重新同步
      %div(ng-show="error")
        %h3 连接服务器失败


