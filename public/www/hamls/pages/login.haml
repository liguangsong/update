%div(position="absolute" style="margin-left:5%;margin-right:5%" )
  %div(class="index-action" style="margin-top:50px")
    %h1
      活动通
  %div(class="index-action" style="width:100%;height:270px;background-color:#e8e8e8;margin-top:10px；margin-left:5%；padding-right:10px；;padding:20px" )
    %div(style="margin:20px;margin-top:30px")
      %input(style="height:30px;width:90%" id="user_name" type="text" placeholder="请输入账号")
      %br
      %br
      %input(style="height:30px;width:90%" id='user_password' type="password"placeholder="请输入密码" )
      %br
      %br
      %button(ng-click="login()" style="width:55%;height:35px" )
        登录
      %br
      %br
      %div(class="label-warning" style="width:70%;margin-left:15%;background-color:#FFE4E1;"ng-show='notice')
        %p(style="color:#7E4F05;font-size:16px" )
          用户名或密码错误
      %div(class="label-warning" style="width:70%;margin-left:15%;background-color:#FFE4E1;margin-top:150px"ng-show='error')
        %div(left="30%")
          %p(style="color:#7E4F05;font-size:16px")
            提交失败


